{% extends 'base.html.twig' %}

{% block body %}

{% include 'AppBundle:layout:header.html.twig' %}

{% image '@AppBundle/Resources/public/img/prod-default.png' %}
    {% set img_default = asset_url %}
{% endimage %}

<div id="parallax-slider-58e771280f371" class="parallax-slider"><ul class="baseList"><li data-preview="https://livedemo00.template-help.com/woocommerce_57763/wp-content/uploads/2015/12/slide_01.png" data-thumb-url="https://livedemo00.template-help.com/woocommerce_57763/wp-content/uploads/2015/12/slide_01-100x50.png" data-ulr-link=""></div>
    {% javascripts '@AppBundle/Resources/public/template/js/custom-home.js' %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
</head>

<body class="single single-product postid-1958 woocommerce woocommerce-page has_woocommerce has_shop olrk-live-chat">
    <div id="motopress-main" class="main-holder">

        <div class="motopress-wrapper content-holder clearfix woocommerce">
            <div class="container">
                <div class="row">
                    <div class="span12" data-motopress-type="static" data-motopress-static-file="static/static-title.php">
                        <section class="title-section"></section>
                    </div>
                </div>
        <div class="row">
            <div class="span12" id="content" style="padding-top: 0 !important;">
                <div itemscope itemtype="https://schema.org/Product" id="product-1958" class="post-1958 product type-product status-publish has-post-thumbnail product_cat-cpus product_cat-motherboards product_tag-branding product_tag-consulting product_tag-customer-service product_tag-ethics shipping-taxable purchasable product-type-simple product-cat-cpus product-cat-motherboards product-tag-branding product-tag-consulting product-tag-customer-service product-tag-ethics instock">

                    <div class="product-images">
                        <div class="product-large-image">
                            <div style="background-image: url({{img_default}});width: 370px; height: 370px; background-repeat: no-repeat; background-size: contain; background-position: center center;"></div>
                        </div>
                        <div style="width: auto;position: absolute;top: 0;left: 230px;">
                            <div style="background-image: url({{item.category.cover|vlabs_media('default')}});width:100px;height:100px;background-size: contain;background-repeat: no-repeat;"></div>
                        </div>
                    </div>
                    <div class="summary entry-summary">
                        <h1 itemprop="name" class="product_title entry-title">{{item.name}}</h1>
                        <div itemprop="offers" itemscope itemtype="https://schema.org/Offer">
                            <p class="price">
                                <span class="amount">&#36;{{item.price}}</span>
                            </p>
                            <meta itemprop="price" content="95" />
                            <meta itemprop="priceCurrency" content="USD" />
                            <link itemprop="availability" href="https://schema.org/InStock" />
                        </div>
                        <div itemprop="description">
                            {% set summary = item.description %}
                            <p>{{summary|slice(0, 108)}}{% if summary|length > 108 %}...{% endif %}</p>
                        </div>
                        <script src="https://www.paypalobjects.com/js/external/paypal-button.min.js?merchant=2PXDZZ8WWSCXW"
                                data-button="buynow"
                                data-name="{{item.name}}"
                                data-amount="{{item.price}}"
                                data-currency="MXN"
                                async>
                        </script>
                        <div class="clear"></div>
                    </div>

            
                    <div class="woocommerce-tabs wc-tabs-wrapper">
                        <ul class="tabs wc-tabs">
                            <li class="description_tab">
                                <a href="#tab-description">{% trans %}Descripción{% endtrans %}</a>
                            </li>
                        </ul>
                        
                        <div class="panel entry-content wc-tab" id="tab-description">
                            <h2>{% trans %}Descripción del producto:{% endtrans %}</h2>
                            <p>{{item.description}}</p>
                        </div>

                        <div class="related products">
                            <h2>{% trans %}Otros productos{% endtrans %}</h2>
                            <ul class="products">
                            {% set numRel = 0 %}
                            {% for prel in rel %}
                                {% if prel.slug != item.slug and numRel < 4 %}
                                    <li class="post-1930 product type-product status-publish has-post-thumbnail product_cat-cpus product_tag-branding product_tag-consulting product_tag-customer-service product_tag-ethics shipping-taxable purchasable product-type-simple product-cat-cpus product-tag-branding product-tag-consulting product-tag-customer-service product-tag-ethics instock">
                                            <div class="cherry-thumb-wrap">
                                                <div style="background-image: url({{img_default}});width: 300px; height: 300px; background-repeat: no-repeat; background-size: contain; background-position: center center;"></div>
                                                <div style="width: auto;position: absolute;top: 5%;right: 0;">
                                                    <div style="background-image: url({{prel.category.cover|vlabs_media('default')}});width:70px;height:70px;background-size: contain;background-repeat: no-repeat;"></div>
                                                </div>
                                            </div>
                                            <h3>{{prel.name}}</h3>

                                        <span class="price">
                                            <span class="amount">&#36;{{prel.price}}</span>
                                        </span>

                                        <form action="/checkout" method="POST">
                                            <input type="hidden" name="idd" value="{{prel.id}}">
                                            <input type="submit" name="send"  value="{% trans %}Compra ahora!{% endtrans %}" style="width: 100%;margin-top: 5%;">
                                        </form>
                                    </li>
                                    {% set numRel = numRel + 1 %}
                                {% endif %}
                            {% endfor %} 
                            </ul>
                        </div>
                        <meta itemprop="url" content="https://livedemo00.template-help.com/woocommerce_57763/product/product-15/" />
                    </div>
                </div>
            </div>
        </div>
    </div>


    {# FIN DEL BODY #}

{% include 'AppBundle:layout:footer.html.twig' %}

{% endblock %}